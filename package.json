{
  "name": "gioat",
  "version": "1.0.0",
  "description": "Gioat monorepo with NestJS API, shared packages, and database migrations",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --filter api dev",
    "test": "jest --coverage",
    "format": "prettier --write .",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "prisma:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:push": "prisma db push",
    "start": "cd packages/api && npm install && npm run build && npm start",
    "build": "cd packages/api && npm install && npm run build",
    "vercel-build": "cd packages/api && npm install && npx prisma generate && npm run build"
  },
  "devDependencies": {
    "@types/axios": "^0.14.4",
    "@types/jest": "^29.5.12",
    "@types/lru-cache": "^7.10.10",
    "@types/pg": "^8.15.4",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "prisma": "^5.10.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "@nestjs/event-emitter": "^3.0.1",
    "@prisma/client": "^5.22.0",
    "axios": "^1.10.0",
    "class-validator": "^0.14.2",
    "expo-server-sdk": "^3.15.0",
    "nestjs-prisma": "^0.25.0",
    "pg": "^8.16.2",
    "uuid": "^11.1.0"
  }
}