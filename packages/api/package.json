{
  "name": "@gioat/api",
  "version": "1.0.0",
  "description": "NestJS API for Gioat",
  "main": "dist/main.js",
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "NODE_ENV=production nest build --webpack",
    "build:prod": "npm run prebuild && NODE_OPTIONS='--max-old-space-size=512' nest build --webpack",
    "start": "node dist/main",
    "start:prod": "NODE_ENV=production node dist/main",
    "postinstall": "npm rebuild && npx prisma generate"
  },
  "dependencies": {
    "@nestjs/common": "^10.2.7",
    "@nestjs/core": "^10.2.7",
    "@nestjs/platform-express": "^10.2.7",
    "@nestjs/jwt": "^11.0.0",
    "@prisma/client": "^5.22.0",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "express": "^4.18.2",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.2.3",
    "prisma": "^5.10.0",
    "typescript": "^5.3.3"
  }
}