{
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "installCommand": "npm install",
  "env": {
    "NEXT_PUBLIC_API_URL": "https://social-trading-app.onrender.com/api"
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://social-trading-app.onrender.com/api/:path*"
    }
  ]
} 